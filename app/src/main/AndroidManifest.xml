<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.grantas.cassio">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_cassio"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_cassio"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!--<activity android:name=".ChooseFoodTabs"></activity>-->
        <activity android:name="com.example.grantas.cassio.ChooseFoodTabs">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.grantas.cassio.MainActivity" />
        </activity>
        <activity android:name="com.example.grantas.cassio.SettingsActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.grantas.cassio.MainActivity" />
        </activity>
        <receiver android:name=".Tools.AlarmReceiver" />
        <receiver android:name=".Tools.AlarmSetter">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

    </application>

</manifest>